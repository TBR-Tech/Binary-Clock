<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" 
>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@layout/date_size_dialog"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/labelY"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_weight="0.5"
            android:textAlignment="center"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/labelX"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_weight="0.5"
            android:textAlignment="center"
            android:textSize="20sp" />
        
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <NumberPicker
	        android:id="@+id/HeightPicker"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="0.5"
	        android:layout_below="@+id/labelY"
	      />

        <NumberPicker
          android:id="@+id/WidthPicker"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="0.5"
	        android:layout_below="@+id/labelX"
          android:text="Width" 
        />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:orientation="horizontal" >
        
        <Button
            android:id="@+id/cancel_date_height_button"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="wrap_content"
            android:layout_below="@+id/HeightPicker"
            android:text="Cancel" />

        <Button
            android:id="@+id/set_date_height_button"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="wrap_content"
        		android:layout_below="@+id/WidthPicker"
            android:text="Set" />

    </LinearLayout>

</RelativeLayout>